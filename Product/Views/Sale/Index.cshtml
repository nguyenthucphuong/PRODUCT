@model List<Handle>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
}

<div class="column left custom-label-left background">
    <div class="row">
        <h1 class="centered-heading">Danh sách sản phẩm</h1>
        <table id="myTable">
            @if (Model.Count == 0)
            {
                <caption>Không có dữ liệu</caption>
            }
            <tr>
                <th>STT</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th class="align-right">Đơn giá</th>
                <th class="align-right">Tạm tính</th>
                <th>Thao tác</th>
            </tr>
            @foreach (var handle in Model)
            {
                <tr>
                    <td>@handle.STT</td>
                    <td>@handle.TenSanPham</td>
                    <td>@handle.SoLuong</td>
                    <td class="align-right">@handle.DonGia.ToString("n0")</td>
                    <td class="align-right">@((handle.SoLuong * handle.DonGia).ToString("n0"))</td>
                    <td>
                        <form method="POST" action="@Url.Action("DeleteAction", "Sale")">
                            <input type="hidden" name="id" value="@handle.STT">
                            <button type="submit">
                                <i class="fa fa-trash" style="color: red; cursor: pointer;"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        <div id="tongTien">Tổng thành tiền: <span id="tongtien">@((Model.Count == 0) ? "0" : ViewData["TongTien"].ToString())</span> đồng</div>
    </div>
</div>
<div class="column right custom-label-right background">
    <h1 class="centered-heading">Thông tin sản phẩm</h1>
    <form id="myform" action="/Sale/AddToCart" method="post">
        <label for="sanPham">Tên sản phẩm *</label>
        <input type="text" id="sanPham" name="sanPham" required>
        <label for="soLuong">Số lượng *</label>
        <input type="text" id="soLuong" name="soLuong" required>
        <label for="donGia">Đơn giá bán *</label>
        <input type="text" id="donGia" name="donGia" required>
    </form>
    <p>(*): Thông tin bắt buộc</p>
    <form action="/Sale/ThanhToan" method="post">
        <button type="submit" id="themvao" form="myform" class="button">Thêm vào giỏ hàng</button>
        <button type="submit" id="thanhtoan" class="button">Thanh toán</button>
    </form>
</div>